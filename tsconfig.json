{
  "compilerOptions": {
    "strictNullChecks": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
